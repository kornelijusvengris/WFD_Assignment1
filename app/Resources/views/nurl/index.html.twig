{% extends '_base.html.twig' %}

{% block body %}
    <h1>Nurls list</h1>

    {% if nurls %}
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Summary</th>
                <th>Public</th>
                <th>Frozen</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nurl in nurls %}
            <tr>
                <td><a href="{{ path('nurl_show', { 'id': nurl.id }) }}">{{ nurl.id }}</a></td>
                <td>{{ nurl.title }}</td>
                <td>{{ nurl.content }}</td>
                <td>{{ nurl.summary }}</td>
                <td>{% if nurl.public %}Yes{% else %}No{% endif %}</td>
                <td>{% if nurl.frozen %}Yes{% else %}No{% endif %}</td>
                <td>{{ nurl.notes }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('nurl_show', { 'id': nurl.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('nurl_edit', { 'id': nurl.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
    Nothing to display.
    {% endif %}

    <ul>
        <li>
            <a href="{{ path('nurl_new') }}">Create a new nurl</a>
        </li>
    </ul>
{% endblock %}
