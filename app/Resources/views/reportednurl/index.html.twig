{% extends '_base.html.twig' %}

{% block body %}
    <h1>Reportednurls list</h1>

    {% if reportedNurls %}
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Reason</th>
                <th>Frozen</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reportedNurl in reportedNurls %}
            <tr>
                <td><a href="{{ path('reportednurl_show', { 'id': reportedNurl.id }) }}">{{ reportedNurl.id }}</a></td>
                <td>{{ reportedNurl.reason }}</td>
                <td>{% if reportedNurl.frozen %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reportednurl_show', { 'id': reportedNurl.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reportednurl_edit', { 'id': reportedNurl.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        Nothing to display.
    {% endif %}

    <ul>
        <li>
            <a href="{{ path('reportednurl_new') }}">Create a new reportedNurl</a>
        </li>
    </ul>
{% endblock %}
